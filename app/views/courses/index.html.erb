
<%= button_to "test", courses_path(), :remote => true %>
<div id="ajaxdiv">
	This should be changed after you press the above button.
</div>
<% @currentuser = User.find_by_id(session[:user_id]) %>


<h1>Listing courses for <%= @currentuser.name %> </h1>
<% if @currentuser.classification == 'Student' %>
<br>
	<%= render 'sendcoursesform' %>

<br>
<% end %>


<div style="height: 300px; overflow: scroll;">
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Hours</th>
				<th>Prereq</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<% if @currentuser.classification == "Student" %>

			<% @courses.each do |course| %>
			<%if course.studentid == @currentuser.id %>
			<tr>
				<td><%= course.name %></td>
				<td><%= course.hours %></td>
				<td><%= course.prereq %></td>
				<td><%= link_to 'Show', course, :class => ('btn btn-success btn-md') %></td>
				<td><%= link_to 'Destroy', course,:class => ('btn btn-danger btn-md') , method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<%end%>
			<% end %>
			
			<%else%>
			<% @courses.each do |course| %>
			<tr>
				<td><%= course.name %></td>
				<td><%= course.hours %></td>
				<td><%= course.prereq %></td>
				<td><%= link_to 'Show', course, :class => "btn btn-default btn-md btn-block" %> </td>
					
				<td><%= link_to 'Edit(Delete this using IF for student TO DO)', edit_course_path(course), :class => "btn btn-default btn-md btn-block" %></td>
				<td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-md btn-block" %></td>
			</tr>
			<%end%>			
			<%end%>
		</tbody>
</div>
<div>
	
	<%= render 'sendcoursesform' %>
	
	

<%case @currentuser.classification%>
<%      when "Admin"%>
<p id="action" class="lead">
	<a href="#modal-form" class="btn btn-outline-inverse btn-block"data-toggle="modal">Add a course</a>
</p>
<%= render :partial => 'new_course_modal' %>
<%= link_to 'Add to Courselist', new_courselist_path %>
<%= link_to 'Back', admin_path() %>
<%      when "Advisor"%>
<%= link_to 'Back', advisor_path(),:class => "btn btn-outline-inverse btn-block" %>
<%     else%>
<%= link_to 'Back', student_path(),:class => "btn btn-outline-inverse btn-block" %>
<%     end%>
</div>

<div>
	<br>
</div>
