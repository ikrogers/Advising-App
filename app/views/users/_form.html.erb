<% @currentuser = User.find_by_id(session[:user_id]) %>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :classification %><br>
    <%= f.select :classification, User::USER_TYPES, prompt: 'Select type of user' %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <br>
  
  <% if @currentuser.classification = 'Admin' %>
  <div>
  <%= f.label :advisor %>
 <select name="Advisors" >
			<% @advisor = User.all %>
			<% @advisor.each do |list| %>
			<% @match = 0 %>
			<% if list.classification == 'Advisor'%>
			<% @match = 1 %>
			<% end %>
			<% if @match == 1 %>
			<option><%= list.name %></option>
			<% end %>
			<% end %>
	</select>

  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
