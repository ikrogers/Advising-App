<% @currentuser = User.find_by_id(session[:user_id]) %>

<div class="form-horizontal">

	<%= form_tag(:class=>"form-horizontal", :role=>"form") do %>
	<div class="form-group">
		<div class="col-sm-12">
			<%= text_field_tag :name, params[:name], :class=>"form-control", :placeholder=>"Username", :style=>"color : #000000" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= text_field_tag :fname,params[:fname], :class=>"form-control",:placeholder=>"First Name", :style=>"color : #000000" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= text_field_tag :lname,params[:lname], :class=>"form-control",:placeholder=>"Last Name", :style=>"color : #000000" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= text_field_tag :mi,params[:mi], :class=>"form-control",:placeholder=>"Middle Initial", :style=>"color : #000000" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= select_tag :classification, User::USER_TYPES, :class=>"dropdown-menu", :style=>"color : #000000" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= password_field_tag :password,params[:password], :class=>"form-control",:placeholder=>"Password", :style=>"color : #000000" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<%= password_field_tag :password_confirmation,params[:password_confirmation], :class=>"form-control",:placeholder=>"Confirm Password", :style=>"color : #000000" %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
			<%= submit_tag "Submit",:class=>"btn btn-default" %>
		</div>
	</div>
	<% end %>
</div>

