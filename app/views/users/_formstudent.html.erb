<div class="form-horizontal">
<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  		</div>
	</div>
  <% end %>

	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
    <%= text_field_tag :name, params[:name],:class=>"form-control",:placeholder=> user.name %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
    <%= text_field_tag :password, params[:password],:class=>"form-control",:placeholder=> user.password %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
    <%= text_field_tag :password_confirmation, params[:password_confirmation],:class=>"form-control",:placeholder=> user.password_confirmation %>
		</div>
	</div><br /> 
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
  	<%= text_field_tag :fname, params[:fname],:class=>"form-control",:placeholder=> user.fname %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
  	<%= text_field_tag :mi, params[:mi],:class=>"form-control",:placeholder=> user.mi %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
  	  	<%= text_field_tag :lname, params[:lname],:class=>"form-control",:placeholder=> user.lname %>

		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-1 col-sm-10">
    <%= f.submit %>
		</div>
	</div>
<% end %>
</div>