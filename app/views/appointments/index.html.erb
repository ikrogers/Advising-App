	<table  class="table table-bordered">
		<% @appointment = Appointment.find_by_stuID(@currentuser.id)%>
		<tr>

			<th>Start</th>
			<th>End</th>
			<th>Advisor</th>
			<th>Selection</th>
		</tr>
		<tr>

