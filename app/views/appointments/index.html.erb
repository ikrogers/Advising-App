<%@currentuser =  User.find_by_id(session[:user_id])%>
<h1>Appointments for <%= @currentuser.name%></h1>


<table>
  <tbody>
	    <% @appointments.each do |appointment| %>
	      <tr>
	      	
	        <td><%= appointment.appts %></td>
	        <td><%= appointment.appte %></td>
	        <td><%= (User.find_by_id(appointment.stuID)).name %></td>
	        <td><%= appointment.approved %></td>
	        <td><%= appointment.notes %></td>
	        <td><%= link_to 'Show', appointment %></td>
	        <td><%= link_to 'Approve', appointment, method: :approve%></td>
	        <td><%= link_to 'Deny', appointment, method: :deny, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
    
  </tbody>
</table>

<br>

<%if(@currentuser.classification == 'advisor' || @currentuser.classification == 'admin')%>
<%= link_to 'New Appointment', new_appointment_path %>
<%end%>






<%@currentuser =  User.find_by_id(session[:user_id])%>
<h1>Appointments for <%= @currentuser.name%></h1>

<table>

  <tbody>
    <% if(@appointment != nil) %>
      <tr>
        <td><%= @appointment.appts %></td>
        <td><%= @appointment.appte %></td>
        <td><%= @appointment.advID %></td>
        <td><%= @appointment.stuID %></td>
        <td><%= @appointment.approved %></td>
        <td><%= @appointment.notes %></td>
        <td><%= link_to 'Show', @appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(@appointment) %></td>
        <td><%= link_to 'Destroy', @appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%else%>  
    	<%= render 'calendar'%>
    <% end %>
  </tbody>
</table>

